[sqlfluff]
dialect = postgres
fix_even_unparsable = True
# ignore = templating
runaway_limit = 100
processes = -1
# exclude_rules = L052


[sqlfluff:rules]
tab_space_size = 4

[sqlfluff:rules:L003]
hanging_indents = False

[sqlfluff:rules:L052]
# Semi-colon formatting approach
multiline_newline = False
require_final_semicolon = True

